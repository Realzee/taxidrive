rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow logged-in users to upload to "association-logos/"
    match /association-logos/{file} {
      allow read: if true; // anyone can view logos
      allow write: if request.auth != null; // only logged-in users can upload
    }

    // Allow logged-in users to upload their profile pics
    match /user-profiles/{file} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default rule (deny everything else unless specified)
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
